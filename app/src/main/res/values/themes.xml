<resources>
    <!-- Base application theme. -->
    <style name="Theme.HammerSys" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white_200</item>
        <item name="colorPrimaryVariant">@color/white_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="tabStyle">@style/Widget.App.TabLayout</item>
    </style>

    <style name="Theme.HammerSys.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HammerSys.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
        <item name="tabTextAppearance">@style/TextAppearance.App.Button</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">@color/icons_pink</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="colorSurface">@color/tab_surface</item>
        <item name="colorOnSurface">@color/icons_gray</item>
    </style>

    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>

    <style name="Theme.HammerSys.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@drawable/background_color_chip_state_list</item>
        <item name="android:textColor">@drawable/text_color_chip_state_list</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>
